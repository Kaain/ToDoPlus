<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <CheckBox
        android:id="@+id/list_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"/>

    <CheckBox
        android:id="@+id/list_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBaseline="@+id/list_finished"
        android:layout_alignBottom="@+id/list_finished"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/list_finished"
        android:button="@drawable/starbutton"
        android:focusable="false"/>

    <TextView
        android:id="@+id/list_todoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@+id/list_delete_button"
        android:layout_toRightOf="@+id/list_favorite"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/list_hiddenid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/list_expiredate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_todoname"
        android:layout_alignRight="@+id/list_todoname"
        android:layout_below="@+id/list_todoname"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_delete"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>